{
  "name": "vectorizer-gui",
  "version": "0.1.0",
  "description": "Desktop GUI for Vectorizer - High-performance vector database",
  "main": "dist-electron/main/main.js",
  "author": "HiveLLM Contributors",
  "license": "MIT",
  "homepage": "https://github.com/hivellm/vectorizer",
  "scripts": {
    "dev": "node dev-runner.js",
    "dev:simple": "node dev-runner-simple.js",
    "dev:check": "node check-dev.js",
    "dev:vite": "vite --host 0.0.0.0",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "build": "npx vite build && npx tsc -p tsconfig.main.json",
    "build:vite": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "electron:build": "pnpm build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist dist-electron dist-release",
    "type-check": "vue-tsc --noEmit && tsc -p tsconfig.main.json --noEmit"
  },
  "dependencies": {
    "@hivellm/vectorizer-client": "^0.4.1",
    "@monaco-editor/loader": "^1.6.1",
    "@vueuse/core": "^10.7.0",
    "conf": "^10.2.0",
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "io.hivellm.vectorizer-gui",
    "productName": "Vectorizer GUI",
    "copyright": "Copyright Â© 2025 HiveLLM Contributors",
    "directories": {
      "output": "dist-release",
      "buildResources": "build"
    },
    "includeSubNodeModules": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*",
      "!src/**/*",
      "!*.ts",
      "!tsconfig*.json",
      "!*.map"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "asar": false,
    "extraResources": [
      {
        "from": "../config.yml",
        "to": "config.yml"
      }
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Development",
      "maintainer": "HiveLLM Contributors",
      "artifactName": "${name}_${version}_${arch}.${ext}"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icons/icon.icns",
      "background": "build/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  }
}
