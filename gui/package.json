{
  "name": "vectorizer-gui",
  "version": "0.1.0",
  "description": "Desktop GUI for Vectorizer - High-performance vector database",
  "main": "dist-electron/main/main.js",
  "author": "HiveLLM Contributors",
  "license": "MIT",
  "scripts": {
    "dev": "node dev-runner.js",
    "dev:vite": "vite",
    "dev:electron": "electron .",
    "build": "vite build && tsc -p tsconfig.main.json",
    "build:vite": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist dist-electron dist-release",
    "type-check": "vue-tsc --noEmit && tsc -p tsconfig.main.json --noEmit"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "@hivellm/vectorizer-client": "^0.4.1",
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0",
    "@vueuse/core": "^10.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/js-yaml": "^4.0.9",
    "vue-tsc": "^1.8.27",
    "rimraf": "^5.0.5"
  },
  "build": "electron-builder.yml"
}

