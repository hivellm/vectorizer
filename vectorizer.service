[Unit]
Description=Vectorizer - High-Performance Vector Database
Documentation=https://github.com/hivellm/vectorizer
After=network.target

[Service]
Type=simple
User=vectorizer
Group=vectorizer
WorkingDirectory=/var/lib/vectorizer
ExecStart=/usr/bin/vectorizer --config /etc/vectorizer/config.yml
Restart=on-failure
RestartSec=5s
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/vectorizer
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

[Install]
WantedBy=multi-user.target

