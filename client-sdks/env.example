# Hive Vectorizer SDK Publishing Environment Variables
# Copy this file to .env and fill in your actual values

# npm Registry (for TypeScript and JavaScript SDKs)
NPM_TOKEN=your_npm_token_here
NPM_REGISTRY=https://registry.npmjs.org/

# PyPI Registry (for Python SDK)
PYPI_USERNAME=your_pypi_username
PYPI_PASSWORD=your_pypi_password
PYPI_REPOSITORY=https://upload.pypi.org/legacy/

# crates.io Registry (for Rust SDK)
CARGO_REGISTRY_TOKEN=your_cargo_token_here

# Optional: Custom registries (if using private registries)
# NPM_REGISTRY=https://your-private-npm-registry.com/
# PYPI_REPOSITORY=https://your-private-pypi.com/
# CARGO_REGISTRY=https://your-private-cargo-registry.com/

# Optional: Publishing settings
PUBLISH_DRY_RUN=false
PUBLISH_SKIP_TESTS=false
PUBLISH_FORCE=false

# Optional: Notification settings (for CI/CD)
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_NOTIFICATIONS=true
EMAIL_RECIPIENTS=team@example.com

# Optional: Version management
AUTO_INCREMENT_VERSION=false
VERSION_TYPE=patch  # patch, minor, major
COMMIT_CHANGES=true
CREATE_GIT_TAG=true
